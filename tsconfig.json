// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
// https://www.typescriptlang.org/tsconfig
// TypeORM: https://orkhan.gitbook.io/typeorm/docs/example-with-express
// https://medium.com/@7genblogger/how-to-set-up-typescript-compiler-and-editing-environment-with-node-js-68952aebbe1d
// https://levelup.gitconnected.com/complete-guide-to-using-typeorm-and-typescript-for-data-persistence-in-node-js-module-bfce169959d9
{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    // "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "lib": ["dom", "es5", "es6", "es7", "es2015", "es2016", "es2017", "es2018", "es2020", "esnext"],

    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "inlineSourceMap": true, // https://www.typescriptlang.org/tsconfig#inlineSourceMap
    "inlineSources": true, // https://www.typescriptlang.org/tsconfig#inlineSources
    "declaration": true, // https://medium.com/@7genblogger/how-to-set-up-typescript-compiler-and-editing-environment-with-node-js-68952aebbe1d
    "declarationMap": false, // https://www.typescriptlang.org/tsconfig#declarationMap

    "composite": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true, // https://www.typescriptlang.org/docs/handbook/decorators.html#metadata
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "exclude": ["./dist", "./coverage", "./docs", "./logs", "./node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
